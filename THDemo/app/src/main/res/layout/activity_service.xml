<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout style="@style/title_tab_style">

        <include layout="@layout/title_return_iv"/>

        <TextView
            style="@style/title_center_desc"
            android:text="Service Test"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/local_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LocalService"
            />

        <Button
            android:id="@+id/remote_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RemoteService"
            />

        <Button
            android:id="@+id/notification_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NotificationService"
            />

    </LinearLayout>

</LinearLayout>