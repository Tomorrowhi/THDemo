<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_1"
    android:orientation="vertical">

    <RelativeLayout style="@style/title_tab_style">

        <include layout="@layout/title_return_iv" />

        <TextView
            style="@style/title_center_desc"
            android:text="AMap Function" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/amap_location_and_navigation"
                style="@style/main_bt_style"
                android:text="定位及导航" />

            <Button
                android:id="@+id/amap_locus_history"
                style="@style/main_bt_style"
                android:text="历史轨迹显示" />

            <Button
                android:id="@+id/amap_geography"
                style="@style/main_bt_style"
                android:text="地理栅栏" />
        </LinearLayout>


    </ScrollView>
</LinearLayout>
