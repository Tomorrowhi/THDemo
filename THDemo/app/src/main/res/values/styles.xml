<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/blue_1</item>
        <item name="colorAccent">@color/purple_2</item>
    </style>

    <style name="main_bt_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:background">@drawable/selector_main_bt</item>
    </style>

    <style name="title_tab_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/blue_1</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <style name="title_center_desc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="map_function_right_iv">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginBottom">22dp</item>
    </style>
    <style name="activity_content_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">90</item>
        <item name="android:background">@color/white_2</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">20dp</item>
    </style>
</resources>
